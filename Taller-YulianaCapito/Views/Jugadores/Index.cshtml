@model IEnumerable<Taller_YulianaCapito.Models.Jugadores>

@{
    ViewData["Title"] = "Jugadores";
}

<h4>Jugadores</h4>

<form method="get" asp-controller="Jugadores" asp-action="Index">
    <div class="form-group">
        <label for="equipoFiltro">Filtrar por equipo:</label>
        <select id="equipoFiltro" name="equipoId" class="form-control">
            <option value="">Todos</option>
            @foreach (var equipo in ViewBag.Equipos)
            {
                <option value="@equipo.Id">@equipo.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nuevo Jugador</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Posicion)</th>
            <th>@Html.DisplayNameFor(model => model.Edad)</th>
            <th>@Html.DisplayNameFor(model => model.Equipo.Nombre)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Posicion)</td>
                <td>@Html.DisplayFor(modelItem => item.Edad)</td>
                <td>@Html.DisplayFor(modelItem => item.Equipo.Nombre)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

